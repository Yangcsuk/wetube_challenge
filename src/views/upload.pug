extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 비디오 파일
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumb") 썸네일 파일
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(placeholder="제목", required, type="text", name="title", maxlength=20)
        input(placeholder="설명", required, type="text", name="description")
        input(placeholder="해시태그, 콤마(,)로 구분", required, type="text", name="hashtags")
        input(type="submit", value="업로드")
