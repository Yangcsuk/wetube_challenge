extends base.pug

block content
    h4 Update Video
    form(method="POST")
        input(name="제목", placeholder="Video Title", value=video.title, required)
        input(placeholder="설명", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholder="해시태그, 콤마(,)로 구분하세요.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="저장",type="submit")